

@{
    ViewBag.Title = "ListAdmin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model IEnumerable<BookingFilm.QuanLy>

<h2>Danh sách Admin</h2>
<a href="@Url.Action("Create", "Admin")" class="btntest" style="border-radius: 10px; border: 1px solid; width: 100px; font-size: 16px; ">Add Admin</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>User Name</th>
            <th>Pass</th>
            <th id="action">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var admin in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => admin.ID)</td>
                <td>@Html.DisplayFor(modelItem => admin.UserName)</td>
                <td>@Html.DisplayFor(modelItem => admin.MatKhau)</td>
                <td>

                    <a href="@Url.Action("Edit", "admin", new { id = admin.ID })" style="display: inline !important;">EDIT</a>
                    @using (Html.BeginForm("Delete", "Admin", new { id = admin.ID }, FormMethod.Post, new { @class = "delete-form", @style = "display: inline !important;", @onsubmit = "return confirm('Are you sure you want to delete this admin?');" }))
                    {
                        @Html.AntiForgeryToken()
                        <input type="submit" value="REMOVE" class="delete-button" />
                    }

                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<style>
    .delete-form {
        display: inline-block;
        margin: 0;
        padding: 0;
    }

    .delete-button {
        background-color: #f44336; /* Red */
        color: white;
        padding: 5px 10px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        border: none;
        border-radius: 5px;
    }

        .delete-button:hover {
            background-color: #da190b; /* Darker red */
        }
</style>