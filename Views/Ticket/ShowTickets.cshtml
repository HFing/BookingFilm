@model List<BookingFilm.Ve>

@{
    ViewBag.Title = "Show Tickets";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show Tickets</title>
    <link href="~/CSS/home.css" rel="stylesheet" />

</head>
<body onload="AddCarouselButtons(); CheckSizeAttributes(); AddCards(); MakeJumbotron(); CheckCards(); ResizeHeader();"
      onscroll="ScrollFunction();" onresize="CheckSizeAttributes(); CheckCards(); MakeJumbotron(); ResizeHeader();">
    <div class="content">
        <div class="header">
            <div class="brand">
                <h1 class="red">LEE</h1>
                <h1 class="white">WINHS</h1>
            </div>
            <div class="main-nav">
                <a href="~/" class="button-container">
                    <h2>HOME</h2>
                </a>
                <a onclick="SmoothScroll('movies');" class="button-container">
                    <h2>MOVIES</h2>
                </a>
                <a onclick="SmoothScroll('trending');" class="button-container">
                    <h2>TRENDING</h2>
                </a>
                <a onclick="SmoothScroll('releases');" class="button-container">
                    <h2>RELEASES</h2>
                </a>
                <a onclick="SmoothScroll('search');" class="button-container">
                    <h2>SEARCH</h2>
                </a>
            </div>
            <div class="right-nav">

                @if (@ViewBag.User != null)
                {
                    <a href="~/ProfileUser" style="margin: 0px 10px;">
                        <div class="button-container login">
                            <h2>@ViewBag.User.HoTenKH</h2>
                        </div>
                    </a>

                    <a href="@Url.Action("FoodOrder", "Home")" style="margin: 0px 10px;">
                        <div class="button-container login">
                            <h2>Order Food</h2>
                        </div>
                    </a>

                    <a href="@Url.Action("Logout", "Home")">
                        <div class="button-container login">
                            <h2>Log Out</h2>
                        </div>
                    </a>
                }
                else
                {
                    <a href="/Login">
                        <div class="button-container login">
                            <h2>Log In</h2>
                        </div>
                    </a>
                }
            </div>
        </div>
        <div class="top">
            <div class="image-container">
                <div class="left-side">
                    <h1>Interstellar</h1>
                    <p>
                        Follow a group of astronauts from the future through the cosmos in search of an earthly
                        replacement, what will happen next?
                    </p>
                    <div class="button-section">
                        <div class="bookticket">
                            <h3>Book Ticket</h3>
                            <svg fill="currentColor" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                <path d="M6.271 5.055a.5.5 0 0 1 .52.038l3.5 2.5a.5.5 0 0 1 0 .814l-3.5 2.5A.5.5 0 0 1 6 10.5v-5a.5.5 0 0 1 .271-.445z" />
                            </svg>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="mid">

            <table class="table">
                <thead>
                    <tr>
                        <th>Tên Phim</th>
                        <th>Tên Ghế</th>
                        <th>Tên Khách Hàng</th>
                        <th>Sự Kiện</th>
                        <th>Ngày Đặt</th>
                        <th>Giá Vé</th>
                        <th>Tổng Tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ve in Model)
                    {
                        <tr>
                            <td>@ve.Phim.TenPhim</td>
                            <td>@ve.Ghe.TenGhe</td>
                            <td>@ve.KhachHang.HoTenKH</td>
                            <td>@(ve.SuKien?.TenSK ?? "N/A")</td>
                            <td>@(ve.NgayDat?.ToString("dd/MM/yyyy") ?? "")</td>
                            <td>@(ve.GiaVe?.ToString("N0") ?? "N/A") VND</td>
                            <td>@(ve.ThanhTien?.ToString("N0") ?? "N/A") VND</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="btn-row">
                <p>© 2024 LeeWinHS, By H-Fing</p>
            </div>
        </div>
    </div>

    <script src="~/JS/app.js"></script>
</body>

</html>



<style>

    tbody{
        color:white;
    }
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #4CAF50;
        color: white;
    }

    tr:hover {
        background-color: #f5f5f5;
        color: black;
    }
</style>
