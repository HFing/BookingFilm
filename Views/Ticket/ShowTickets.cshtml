@model List<BookingFilm.Ve>

@{
    ViewBag.Title = "Show Tickets";
}

<h2>Show Tickets</h2>

<table class="table">
    <thead>
        <tr>
            <th>Tên Phim</th>
            <th>Tên Ghế</th>
            <th>Tên Khách Hàng</th>
            <th>Sự Kiện</th>
            <th>Ngày Đặt</th>
            <th>Giá Vé</th>
            <th>Tổng Tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ve in Model)
        {
            <tr>
                <td>@ve.Phim.TenPhim</td>
                <td>@ve.Ghe.TenGhe</td>
                <td>@ve.KhachHang.HoTenKH</td>
                <td>@(ve.SuKien?.TenSK ?? "N/A")</td>
                <td>@(ve.NgayDat?.ToString("dd/MM/yyyy") ?? "")</td>
                <td>@(ve.GiaVe?.ToString("N0") ?? "N/A") VND</td>
                <td>@(ve.ThanhTien?.ToString("N0") ?? "N/A") VND</td>
            </tr>
        }
    </tbody>
</table>

<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #4CAF50;
        color: white;
    }

    tr:hover {
        background-color: #f5f5f5;
    }
</style>
