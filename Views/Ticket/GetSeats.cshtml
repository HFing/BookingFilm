@model BookingFilm.Ghe

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="~/CSS/Ticket.css" rel="stylesheet" />
    <title>Movie Ticket Booking Website</title>
</head>
<body>
    <div class="book">
        <div class="left">
            <div class="play">
                <i class="bi bi-house-fill" id="play"></i>
            </div>
            <img src="@ViewBag.Phim.HinhPhim" alt="" id="poster" />

            <div class="cont">
                <h6>Directed by</h6>
                <p>@ViewBag.Phim.DaoDien</p>
                <h6>Category</h6>
                <p>
                    @ViewBag.Phim.TheLoai
                </p>
                <h6>Year Of Manufacture</h6>
                <p>	@ViewBag.Phim.NamSanXuat</p>
                <h6>Describe</h6>
                <p>	@ViewBag.Phim.MoTa</p>
            </div>
        </div>
        <div class="right">




            <div class="head_time">
                <h1 id="title">@ViewBag.Phim.TenPhim</h1>
                <div class="time">
                    <h6><i class="bi bi-clock"></i> @ViewBag.Phim.ThoiLuong minutes</h6>
                    <button>PG-13</button>
                </div>
            </div>

            
            <footer>
                <p class="footer-text">© 2024 LeeWinHS, By H-Fing</p>
            </footer>
        </div>
    </div>

    <script src="~/JS/Ticket.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jsbarcode/3.11.5/JsBarcode.all.js" integrity="sha512-wkHtSbhQMx77jh9oKL0AlLBd15fOMoJUowEpAzmSG5q5Pg9oF+XoMLCitFmi7AOhIVhR6T6BsaHJr6ChuXaM/Q==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script>
            JsBarcode("#barcode", "J18800792023");
    </script>
</body>
</html>
