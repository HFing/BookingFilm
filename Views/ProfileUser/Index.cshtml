@model BookingFilm.KhachHang

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutProfileUser.cshtml";
}
@{
    var successMessage = TempData["SuccessMessage"] as string;
    if (!string.IsNullOrEmpty(successMessage))
    {
        <script type="text/javascript">
            alert('@successMessage');
        </script>
    }
}
@using (Html.BeginForm("Edit", "ProfileUser", FormMethod.Post))
{
    <div class="tab-pane fade active show" id="account-general">
        <div class="card-body media align-items-center">
            <img src="https://bootdey.com/img/Content/avatar/avatar1.png"
                 class="d-block ui-w-80">
        </div>
        <hr class="border-light m-0">
        <div class="card-body">
            <div class="form-group">
                <label class="form-label">Họ và tên</label>
                @Html.TextBoxFor(model => model.HoTenKH, new { @class = "form-control mb-1", @required = "required" })
            </div>
            <div class="form-group">
                <label for="Email">Email Customer</label><br>
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control mb-1", id = "Email", type = "email", @required = "required" })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="form-label">Ngày sinh</label>
                @Html.TextBoxFor(model => model.NgaySinh, "{0:yyyy-MM-dd}", new { @class = "form-control mb-1", @type = "date" })
            </div>
            <div class="form-group">
                <label class="form-label">Giới tính</label>
                <input type="text" class="form-control mb-1" value="@(Model.GioiTinh ? "Nam" : "Nữ")" readonly>
            </div>
            <div class="form-group">
                <label class="form-label">CCCD</label>
                @Html.TextBoxFor(model => model.CCCD, new { @class = "form-control mb-1", @readonly = "readonly" })
            </div>
            <div class="form-group">
                <label class="form-label">Địa chỉ</label>
                @Html.TextBoxFor(model => model.DiaChi, new { @class = "form-control mb-1", @required = "required" })
            </div>
        </div>
    </div>
    <div class="text-right mt-3">
        <button type="submit" class="btn btn-primary">Save changes</button>&nbsp;
        <button type="button" class="btn btn-default" onclick="location.reload();">Cancel</button>
        @Html.ActionLink("Vé", "BookedTickets", "ProfileUser", null, new { @class = "btn btn-info" })


    </div>
}