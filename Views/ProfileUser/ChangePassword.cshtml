@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_LayoutProfileUser.cshtml";
}
@{
    var successMessage = TempData["SuccessMessage"] as string;
    if (!string.IsNullOrEmpty(successMessage))
    {
        <script type="text/javascript">
            alert('@successMessage');
        </script>
    }
}

@using (Html.BeginForm("ChangePassword", "ProfileUser", FormMethod.Post))
{
    <div class="tab-pane fade active show" id="account-change-password">
        <div class="card-body pb-2">
            <div class="form-group">
                <label class="form-label">Current password</label>
                @Html.Password("CurrentPassword", null, new { @class = "form-control" })
                @if (!string.IsNullOrEmpty(ViewBag.CurrentPasswordError))
                {
                    <span class="text-danger">@ViewBag.CurrentPasswordError</span>
                }
            </div>
            <div class="form-group">
                <label class="form-label">New password</label>
                @Html.Password("NewPassword", null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label class="form-label">Repeat new password</label>
                <input type="password" name="confirmNewPassword" class="form-control" />
                @if (!string.IsNullOrEmpty(ViewBag.ConfirmPasswordError))
                {
                    <span class="text-danger">@ViewBag.ConfirmPasswordError</span>
                }
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Change Password">
            </div>
        </div>
    </div>
}