@model BookingFilm.LichChieu

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "ShowTime", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Create Show Time</h4>
    <hr />

    <label for="NgayChieu">Show Date:</label><br>
    @Html.TextBoxFor(model => model.NgayChieu, "{0:yyyy-MM-dd}", new { id = "NgayChieu", type = "date", @required = "required" })<br>

    <label for="SuatChieu">Show Time:</label><br>
    @Html.TextBoxFor(model => model.SuatChieu, "{0:hh\\:mm}", new { id = "SuatChieu", type = "time", @required = "required" })<br>

    <label for="MaPhim">Movie:</label><br>
    @Html.DropDownListFor(model => model.MaPhim, (SelectList)ViewBag.MaPhim, "Select a movie", new { id = "MaPhim", @class = "form-control", @required = "required" })<br>

    <label for="MaPC">Room:</label><br>
    @Html.DropDownListFor(model => model.MaPC, (SelectList)ViewBag.MaPC, "Select a room", new { id = "MaPC", @class = "form-control", @required = "required" })<br> <!-- DropDownListFor cho Phòng Chiếu -->

    <input type="submit" value="Create">
</div>
}


<style>

    .form-control, #SuatChieu {
        border: solid 1px;
        border-radius: 10px;
        margin-top: -28px;
        font-size: 20px;
        width:70%;
        padding: 0px 10px;
    }
        

    h1, h2, h3, h4, h5, h6 {
        margin: 0;
        padding: 10px 0;
        color: #333;
    }

    .form-horizontal {
        max-width: 500px;
        margin: 0 auto;
        padding: 15px;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.1);
    }

        .form-horizontal label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .form-horizontal input[type="text"],
        .form-horizontal input[type="email"],
        .form-horizontal input[type="password"],
        .form-horizontal input[type="date"],
        .form-horizontal input[type="number"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ddd;
            border-radius: 3px;
        }

        .form-horizontal input[type="submit"] {
            background-color: #3498db;
            color: #fff;
            padding: 10px 15px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-top: 10px;
        }

            .form-horizontal input[type="submit"]:hover {
                background-color: #2980b9;
            }

    input {
        margin-top: -25px;
    }

    .text-danger {
        color: red;
    }


    .btn {
        display: inline-block;
        padding: 10px 20px;
        font-size: 16px;
        font-weight: bold;
        text-decoration: none;
        border-radius: 5px;
        background-color: #3498db;
        color: #fff;
        transition: background-color 0.3s ease;
    }

        .btn:hover {
            background-color: #2980b9;
        }
</style>


