
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model IEnumerable<BookingFilm.DoAn>

@if (TempData["ErrorMessage"] != null)
{
    <script type="text/javascript">
        alert("@TempData["ErrorMessage"]");
    </script>
}

<a href="@Url.Action("Create", "Food")" class="btntest" style="border-radius: 10px; border: 1px solid; width: 100px; font-size: 16px; ">Add Food</a>

<div style="text-align: center; margin-top: 20px; padding: 10px; border: 2px solid #4CAF50; border-radius: 5px; width: 300px; margin: 20px auto; box-shadow: 0 2px 5px rgba(0,0,0,0.3);">
    @using (Html.BeginForm("Index", "Food", FormMethod.Get))
    {
        <input type="text" name="searchString" placeholder="Search by name or ID" style="width: 200px; height: 30px; padding: 3px 10px; border-radius: 5px; border: 1px solid #ccc;" />
        <input type="submit" value="Search" style="height: 30px; padding: 3px 10px; border-radius: 5px; border: 1px solid #ccc; background-color: #4CAF50; color: white;" />
    }
</div>


<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Image</th>
            <th id="action">Action</th>
        </tr>
    <thead>
    <tbody>
        @foreach (var doAn in Model)
        {
            <tr>
                <td>@doAn.MaDA</td>
                <td>@doAn.TenDA</td>
                <td>@doAn.GiaDA</td>
                <td><img src="@doAn.HinhDA" style="width:100px; height:100px;" alt="Image"></td>

                <td>
                    <a href="@Url.Action("Edit", "Food", new { id = doAn.MaDA })" style="display: inline !important;">EDIT</a>
                    <a href="@Url.Action("Delete", "Food", new { id = doAn.MaDA })" style="display: inline !important;" onclick="return confirm('Are you sure you want to delete this item?');">REMOVE</a>
                </td>
            </tr>
        }
    </tbody>
</table>

