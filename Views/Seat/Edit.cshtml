@model BookingFilm.Ghe
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@{
    ViewBag.Title = "Edit Seat";
}

<h2>Edit Seat</h2>

@using (Html.BeginForm("Edit", "Seat", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.HiddenFor(model => model.MaGhe)
    @Html.HiddenFor(model => model.TenGhe)
    @Html.HiddenFor(model => model.MaPC)

    <label for="TenGhe">Seat Name: @Html.DisplayFor(model => model.TenGhe)<br></label>


    <label for="MaPC">Cinema Room ID: @Html.DisplayFor(model => model.MaPC)<br></label>


    <label for="LoaiGhe">Seat Type:</label><br />
    @Html.TextBoxFor(model => model.LoaiGhe, new { id = "LoaiGhe", @required = "required" })
    <label for="TrangThaiGhe">Seat Status: @Html.CheckBox("TrangThaiGhe", Model.TinhTrangGhe.GetValueOrDefault())<br></label>


    <input type="submit" value="Save Changes"><br />    
    
</div>
}

<div class="btn-act">
    <a href="@Url.Action("Delete", "Seat", new { id = Model.MaGhe })" style="display: inline !important;" onclick="return confirm('Are you sure you want to delete this Seat?');">REMOVE</a>
</div>
<div class="btn-act">
    @Html.ActionLink("Back to List", "Index")
</div>
<style>
