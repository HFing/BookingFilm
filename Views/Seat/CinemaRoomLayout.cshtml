
@model BookingFilm.PhongChieu
@{
    ViewBag.Title = "CinemaRoomLayout";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<h2>@Model.TenPC</h2>

<div class="cinema-room">
    <div class="screen" id="screen">
        Screen
    </div>
    @foreach (var hang in Model.Ghes.GroupBy(ghe => ghe.TenGhe.Substring(0, 1)))
    {
        <div class="cinema-row">
            @foreach (var ghe in hang.OrderBy(ghe => ghe.TenGhe))
            {
                <a href="@Url.Action("Edit", "Seat", new { id = ghe.MaGhe })" class="cinema-seat @(ghe.TinhTrangGhe.GetValueOrDefault() ? "empty-seat" : "")">
                    @ghe.TenGhe
                </a>
            }
        </div>
    }
    <div class="details" id="det">
        <button class="Block">Block</button>
        <button class="Available">Available</button>

    </div>
</div>



<style>
    .details {
        margin-top: 45px;
        display: flex;
    }
    .Block, .Available {
        width: 100px;
        height: 40px;
        margin-right: 10px;
        border-radius: 5px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.8em;
        color: #fff;
        box-shadow: 0px 2px 5px 0px rgba(0, 0, 0, 0.3);
        transition: background-color 0.3s ease;
        text-decoration: none;
    }
    .Available {
        background-color: #007BFF;
    }
    .Block {
        background-color: gray;
    }
    .cinema-room {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 20px;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        background-color: #f9f9f9;
    }

    .cinema-row {
        display: flex;
        justify-content: center;
        margin-bottom: 15px;
    }

    .cinema-seat {
        width: 40px;
        height: 40px;
        margin-right: 10px;
        background-color: #007BFF;
        border-radius: 5px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.8em;
        color: #fff;
        box-shadow: 0px 2px 5px 0px rgba(0,0,0,0.3);
        transition: background-color 0.3s ease;
        text-decoration: none;
    }

        .cinema-seat:hover {
            cursor: pointer;
            background-color: #0056b3;
            text-decoration: none;
            color: #fff;
        }
    .empty-seat {
        color: black;
        background-color:gray;
    }
        .empty-seat:hover {
            cursor: pointer;
            background-color: black;
            text-decoration: none;
            color: #fff;
        }
    .legend {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
    }
    .screen {
        position: relative;
        width: 100%;
        height: 100px;
        border-top: 3px solid #fd6565;
        margin-top: 50px;
        border-radius: 20%;
        overflow: hidden;
        box-shadow: inset 0px 10px 20px var(--color);
        text-align: center;
        padding-top: 15px;
        color: black;
        letter-spacing: 5px;
        font-size: 12px;
        /* display: none; */
    }
        .screen::before {
            content: '';
            position: absolute;
            width: 100%;
            height: 20px;
            border-radius: 50%;
            box-shadow: 0px 0px 20px rgb(184, 184, 184, .5);
            top: -20px;
            left: 0;
        }

</style>