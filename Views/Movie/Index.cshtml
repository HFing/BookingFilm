
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model IEnumerable<BookingFilm.Phim>

@if (TempData["ErrorMessage"] != null)
{
    <script type="text/javascript">
        alert("@TempData["ErrorMessage"]");
    </script>
}

<a href="@Url.Action("Create", "Movie")" class="btntest" style="border-radius: 10px; border: 1px solid; width: 100px; font-size: 16px; ">Add Movie</a>
<div style="text-align: center; margin-top: 20px; padding: 10px; border: 2px solid #4CAF50; border-radius: 5px; width: 300px; margin: 20px auto; box-shadow: 0 2px 5px rgba(0,0,0,0.3);">
    @using (Html.BeginForm("Index", "Movie", FormMethod.Get))
    {
        <input type="text" name="searchString" placeholder="Search by name or ID" style="width: 200px; height: 30px; padding: 3px 10px; border-radius: 5px; border: 1px solid #ccc;" />
        <input type="submit" value="Search" style="height: 30px; padding: 3px 10px; border-radius: 5px; border: 1px solid #ccc; background-color: #4CAF50; color: white;" />
    }
</div>
<table class="table" style="overflow-x: auto;">
    <thead>
        <tr>
            <th>ID Moive</th>
            <th>Name Moive</th>
            <td>Movie Genre</td> @*The loai phim*@
            <th>Movie Duration</th> @*Thoi luong phim*@
            <th>Directorth</th> @*Dao Dien*@
            <th>Year of Manufacture</th> @*Nam san xuat*@
            <th>Movie Pictures</th> @*Hinh phim*@
            <th>Describe</th> @*Mo ta*@
            <th id="action">Action</th>
        </tr>
    <thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.MaPhim</td>
                <td>@movie.TenPhim</td>
                <td>@movie.TheLoai</td>
                <td>@movie.ThoiLuong</td>
                <td>@movie.DaoDien</td>
                <td>@movie.NamSanXuat</td>
                <td><img src="@movie.HinhPhim" style="width:150px; height:100px;" alt="Image"></td>
                <td>@movie.MoTa</td>
                <td>
                    <a href="@Url.Action("Edit", "Movie", new { MaPhim = movie.MaPhim })" style="display: inline !important;">EDIT</a>
                    <a href="@Url.Action("Delete", "Movie", new { id = movie.MaPhim })" style="display: inline !important;" onclick="return confirm('Are you sure you want to delete this item?');">REMOVE</a>
                </td>

            </tr>
        }
    </tbody>
</table>


