
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@model IEnumerable<BookingFilm.SuKien>


<a href="@Url.Action("Create", "Event")" class="btntest" style="border-radius: 10px; border: 1px solid; width: 125px; font-size: 16px; color:white; background-color:forestgreen ">Add Event</a>
<div style="text-align: center; margin-top: 20px; padding: 10px; border: 2px solid #4CAF50; border-radius: 5px; width: 300px; margin: 20px auto; box-shadow: 0 2px 5px rgba(0,0,0,0.3);">
    @using (Html.BeginForm("Index", "Event", FormMethod.Get))
    {
        <input type="text" name="searchString" placeholder="Search by name or ID" style="width: 200px; height: 30px; padding: 3px 10px; border-radius: 5px; border: 1px solid #ccc;" />
        <input type="submit" value="Search" style="height: 30px; padding: 3px 10px; border-radius: 5px; border: 1px solid #ccc; background-color: #4CAF50; color: white;" />
    }
</div>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Start day</th>
            <th>End date</th>
            <th>Promotion level</th>
            <th id="action">Action</th>
        </tr>
    <thead>
    <tbody>
        @foreach (var suKien in Model)
        {
            <tr>
                <td>@suKien.MaSK</td>
                <td>@suKien.TenSK</td>
                <td>@suKien.NgayBatDau</td>
                <td>@suKien.NgayKetThuc</td>
                <td>@suKien.MucKhuyenMai</td>

                <td>
                    <a href="@Url.Action("Edit", "Event", new { id = suKien.MaSK })" style="display: inline !important">EDIT</a>
                    <a href="@Url.Action("Delete", "Event", new { id = suKien.MaSK })" style="display: inline !important" onclick="return confirm('Are you sure you want to delete this item?');">REMOVE</a>
                </td>
            </tr>
        }
    </tbody>
</table>
