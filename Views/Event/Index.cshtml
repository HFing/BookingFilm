
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@model IEnumerable<BookingFilm.SuKien>


<a href="@Url.Action("Create", "Event")" class="btntest" style="border-radius: 10px; border: 1px solid; width: 125px; font-size: 16px; color:white; background-color:forestgreen ">Add Event</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Start day</th>
            <th>End date</th>
            <th>Promotion level</th>
            <th id="action">Action</th>
        </tr>
    <thead>
    <tbody>
        @foreach (var suKien in Model)
        {
            <tr>
                <td>@suKien.MaSK</td>
                <td>@suKien.TenSK</td>
                <td>@suKien.NgayBatDau</td>
                <td>@suKien.NgayKetThuc</td>
                <td>@suKien.MucKhuyenMai</td>

                <td>
                    <a href="@Url.Action("Edit", "Event", new { id = suKien.MaSK })" style="display: inline !important; color: white; background-color: forestgreen">EDIT</a>
                    <a href="@Url.Action("Delete", "Event", new { id = suKien.MaSK })" style="display: inline !important; color: white; background-color: forestgreen" onclick="return confirm('Are you sure you want to delete this item?');">REMOVE</a>
                </td>
            </tr>
        }
    </tbody>
</table>
